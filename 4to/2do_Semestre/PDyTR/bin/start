#!/usr/bin/env bash


docker ps --format '{{.Names}}' | grep pdytr > /dev/null

if [ $? -eq 1 ]; then
  echo "Starting pdytr"
  if [ "$1" == "view" ]; then
    docker run --rm -itd --name pdytr -v $PWD:/pdytr/ -p 5901:5901 -p 6901:6901 gmaron/pdytr
  else
    docker run --rm -itd --name pdytr -v $PWD:/pdytr/ -p 5901:5901 -p 6901:6901 gmaron/pdytr:simple
  fi
else
  echo "pdytr already up"
fi
